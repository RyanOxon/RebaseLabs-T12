<section>
<h1>Lista de Exames</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col" class="col-1">id</th>
        <th scope="col" class="col-4">Nome</th>
        <th scope="col" class="col-2">Exame</th>
        <th scope='col' class="col-2">Token</th>
        <th scope="col" class="col-2">Data</th>
      </tr>
    </thead>
    <tbody>
      <% @sliced_exams.each do |exam| %>
        <tr>
          <th scope="row"><%= exam["id"] %></th>
          <td><%= exam["nome_paciente"] %></td>
          <td><%= exam["tipo_exame"] %></td>
          <td><%= exam["token_resultado_exame"] %></td>
          <td><%= exam["data_exame"] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<div class="d-flex justify-content-around">
  <a href="/tests?page=<%= @page - 1 %>" class="btn btn-primary <%= 'disabled' if @page <= 1 %>">Anterior</a>
  <a href="/tests?page=<%= @page + 1 %>" class="btn btn-primary <%= 'disabled' if @sliced_exams.length < 10 %>">Pr√≥ximo</a>
</div>
</section>

  